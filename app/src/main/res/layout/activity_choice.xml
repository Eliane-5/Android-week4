<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/homebackground"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/blackAndWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black/White Pictures"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="@color/darkgrey"
        android:textStyle="bold"
        android:padding="15dp"
        android:background="@drawable/gradient_button"/>

    <Button
        android:id="@+id/colorful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colorful Pictures"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@color/darkgrey"
        android:background="@drawable/gradient_button"/>

    <Button
        android:id="@+id/exhibition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="want to make a live exhibition?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@color/darkgrey"
        android:background="@drawable/gradient_button"/>

</RelativeLayout>