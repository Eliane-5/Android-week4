<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/homebackground"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:id="@+id/row1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a Picture"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            android:background="@drawable/gradient_button"/>

        <Button
            android:id="@+id/exhibition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="want to make a live exhibition?"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            android:background="@drawable/gradient_button"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:id="@+id/row2"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/colorful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colorful Pictures"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/darkgrey"
            android:background="@drawable/gradient_button"/>

        <Button
            android:id="@+id/blackAndWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black/White Pictures"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="15dp"
            android:background="@drawable/gradient_button"/>

    </LinearLayout>

</RelativeLayout>